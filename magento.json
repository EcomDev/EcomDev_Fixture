{
    "magento": {
        "application": {
            "name": "fixture",
            "uid": ":auto",
            "main_domain": "fixtures.dev",
            "directory": "<%=current_path%>/build",
            "domain_map": {},
            "composer": true,
            "composer_path": "../",
            "database_options": {
                "create_test": true
            },
            "php_extensions": {
                "xdebug": {
                    "preferred_state": "beta",
                    "zend_extensions": ["xdebug.so"],
                    "directives": {
                        "xdebug.remote_enable": "1",
                        "xdebug.remote_port": "9000",
                        "xdebug.remote_host": "192.168.6.1"
                    }
                }
            }
        }
    },
    "php": {
        "major_version": "5.4",
        "directives": {
            "date.timezone": "UTC",
			"error_reporting": "E_ALL",
            "display_errors": "1",
            "log_errors": "1",
            "error_log": "<%=current_path%>/var/log/php-error.log"
        }
    },
    "recipes": [
        "mysql::server",
        "magento::application",
        "git::default",
        "magento::dev"
    ],
    "vm": {
        "cpu": 4,
        "memory": 1024,
        "ip": "192.168.6.2",
        "mount_dirs": {
            "<%=current_path%>": "<%=current_path%>"
        },
        "mount_dir_options": {
            "type": "nfs",
            "mount_options": ["rw", "tcp", "async", "nolock"]
        }
    }
}
